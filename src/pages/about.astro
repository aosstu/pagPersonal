---
import Modelo3DCard from "../components/modelo.jsx";
import Header from "../components/Header.astro";
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <title>Galería de Modelos</title>
    </head>
    <body>
        <Header />
        <div
            style="
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 24px;
      padding: 40px;
      background: #000;
      min-height: 100vh;
    "
        >
            <Modelo3DCard
                client:load
                modelPath="src/assets/LAPTOP.glb"
                titulo="Modelo 1"
                descripcion="Una descripción interesante de tu modelo"
            />

            <Modelo3DCard
                client:load
                modelPath="src/assets/LAPTOP.glb"
                titulo="Modelo 2"
                descripcion="Otro modelo de tu colección"
            />

            <Modelo3DCard
                client:load
                modelPath="src/assets/LAPTOP.glb"
                titulo="Modelo 3"
                descripcion="Tercero de la colección"
            />
        </div>
    </body>
</html>
